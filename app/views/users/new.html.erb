<div class="row show-grid">
  <div class="span8 columns offset4">
    <% if flash[:notice]%>
      <div class="alert alert-message error">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <div class="single-form">
      <div class="header">
        <h3>Create your account</h3>
      </div>
      <%= form_for @user, :html => {:class => "form-stacked", :multipart => true} do |f| %>
        <%= f.error_messages %>
        <div class="clearfix">
          <%= f.label :email %> 
          <div class="input"><%= f.text_field :email, :placeholder => 'Email' %></div>
        </div>
        <div class="clearfix">
          <%= f.label :password %> 
          <div class="input"><%= f.password_field :password, :placeholder => 'Password' %></div>
        </div>
        <div class="clearfix">
          <%= f.label :custom_url %> 
          <div class="input custom_url_input">
            <%= f.text_field :custom_url %>
            <span class="url_prefix">studyhall.com/</span>
          </div>
        </div>
        <div class="clearfix">
          <%= f.submit "Join StudyHall", :class => "btn primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
