<%= form_for user, :remote => true, :html => {:class => "form-stacked with_columns", :id => "edit_profile_photo_form", :multipart => true} do |f| %>
  <%= hidden_field_tag :rel_form, 'photo_form' %>
  <%= hidden_field_tag :com_form, 'photo_form' %>
  <%= hidden_field_tag :other_form, 'photo_form' %>
<div class="popover-body">  <input type="hidden" name="form_id" value="photo_form">
  <p>JPG, GIF, and PNG files are cool. Try and keep it below 400px wide and 500px. Thx.</p>
  <div class="input" style="height:40px;margin-bottom:0;">
    <%= f.label :Your_photo %>
    <%= f.file_field :avatar, :class => 'upload', :style => 'top:-20px'%>
  </div>
  <% if @user.has_avatar? %>
    <div class="input clearfix" style="margin-top:0">
	<div class="input" style="display:inline-block"><%= check_box_tag :delete_avatar %></div>
    <%= f.label "Delete Image", :style => "display:inline-block" %>
    </div>
  <% end %></div>
  <div class="popover-footer" style="border:0;padding-top:0">
    <div class="input clearfix" style="margin-bottom:0">
    <%= f.submit "Save Changes", :class => "btn save right" %>
    <%= link_to "Cancel", "#", :class => "btn close_modal" %>
  </div></div>
<% end %>
